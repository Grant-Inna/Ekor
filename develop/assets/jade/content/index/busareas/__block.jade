mixin ba-block( numb, text )
   article.busareas__block
      .busareas__image
         div( class='busareas_image-#{numb}' )
            .busareas__img.absolute-img( data-large='./assets/images/large/busareas/0#{numb}.webp' data-middle='./assets/images/large/busareas/0#{numb}.webp' data-small='./assets/images/small/busareas/0#{numb}.webp' )
      .busareas__text
         span 0#{numb}
         h4.text-18-title !{text}
