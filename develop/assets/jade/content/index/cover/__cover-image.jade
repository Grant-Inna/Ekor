mixin cover-image( caption, text, image, link )
   h2.title.cover__caption !{caption}
   p.cover__text !{text}
   a( href='#{link}' target='_blank' ).btn.mtauto
      img( src='./assets/images/svg/social/#{image}' )
   .cover_img.absolute-img( data-large='./assets/images/large/cover/cover-1.png' data-middle='./assets/images/middle/cover/cover-1.png' data-small='./assets/images/large/small/cover-1.png' )
