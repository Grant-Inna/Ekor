      .product__scale.product__options_btn( data-text='Меньше упаковки (6-8 кг)' data-weight='1' data-price='1130.30' ).opacity
         .icon__scale
      .product__wholesale.product__options_btn( data-text='Оптом (от 200 кг)' data-weight='200' data-price='226 060' ).opacity
         .icon__wholesale
      .product__text.text-blue
