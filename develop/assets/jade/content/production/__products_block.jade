mixin pr-block( id, text )
   article.production__block
      .production__image( class='production_caption__img-#{id}')
         .p_img.absolute-img( data-large='./assets/images/large/production/#{id}.webp' data-middle='./assets/images/large/production/#{id}.webp' data-small='./assets/images/small/production/#{id}.webp' )
      h2.title.text-blue !{text}
