mixin item_index( numb, text, little_text )
   .carousel__item
      .carousel__item_inner( class='carousel__item-#{numb}')
         .carousel__item_img.absolute-img( data-large='./assets/images/large/carousel/index-#{numb}.webp' data-middle='./assets/images/middle/carousel/index-#{numb}.webp' data-small='./assets/images/small/carousel/index-#{numb}.webp' )
         .carousel__item_text
            h1.caption.text-white !{text}
            h2.text-16.text-white !{little_text}
            a( href='' ).button-yellow
               span Получить прайс
