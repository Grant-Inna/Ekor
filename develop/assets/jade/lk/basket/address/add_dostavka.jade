.add_place_form__dostavka
   form#dostavka_form.dostavka__form
      label( for='dostavka_st' ).label-input.dostavka_st
         input#dostavka_st( type='text' ).input
         span.sup Город, улица, дом, корпус, строение
      .flex.row_flex-10-m.mb10
         label( for='dostavka_kv' ).label-input.dostavka_kv
            input#dostavka_kv( type='text' ).input
            span.sup Квартира
         label( for='dostavka_pd' ).label-input.dostavka_pd
            input#dostavka_pd( type='text' ).input
            span.sup Подъезд
         label( for='dostavka_et' ).label-input.dostavka_et
            input#dostavka_et( type='text' ).input
            span.sup Этаж
      .flex.row_flex-12.dostavka_ch.mb10
         label.label-checkbox( for='dostavka_ch' )
            input#dostavka_ch.checkbox-hidden( type='checkbox' )
            span.checkbox
         span.text-14.text-blue Доставка в частный дом
      .flex.row_flex-12.dostavka_of
         label.label-checkbox( for='dostavka_of' )
            input#dostavka_of.checkbox-hidden( type='checkbox' )
            span.checkbox
         span.text-14.text-blue Доставка в офис

      .items-center.dostavka_info
         .ico__time.mr16
         .add_place__block
            #add_place__data.text-14.text-blue 08:00 - 10:00, 12 апреля
            span.text-small.text-dark Ближайшее время доставки


      button#dostavka_btn.button-yellow.button-long.text-blue.mtauto( type='button' ).dostavka_btn
         span Подтвердить адрес
